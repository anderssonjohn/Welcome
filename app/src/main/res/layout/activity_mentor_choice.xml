<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dat255.chalmers.com.welcome.MentorChoiceActivity">

    <Button
        android:text="@string/i_want_to_learn_swedish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIDontSpeakSwedish"
        android:textSize="25sp"
        android:layout_above="@+id/buttonISpeakSwedish"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="asylumSeekerSelected"/>

    <Button
        android:text="@string/i_speak_swedish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonISpeakSwedish"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="mentorSelected" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/linLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></LinearLayout>

    <TextView
        android:text="@string/questionnaire_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewInformation"
        android:textSize="35sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/linLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/question_mark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonIDontSpeakSwedish"
        android:layout_toRightOf="@+id/buttonIDontSpeakSwedish"
        android:layout_toEndOf="@+id/buttonIDontSpeakSwedish"
        android:id="@+id/button3"
        android:onClick="informationSv"/>

    <Button
        android:text="@string/question_mark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonIDontSpeakSwedish"
        android:layout_toRightOf="@+id/buttonISpeakSwedish"
        android:layout_toEndOf="@+id/buttonISpeakSwedish"
        android:id="@+id/button4" />

</RelativeLayout>
